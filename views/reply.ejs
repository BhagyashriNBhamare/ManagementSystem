<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Reply form</title>


  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    .col-md {
      margin-top: 20px;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>
</head>

<body>
  <form action="/reply" method="POST">
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal"><b>Reply</b></h5>
  </div>
  <div class="container">
    <div class="col-md">
      <div class="row">
        <div class="col-md-2 my-auto">
          <h5>Question : </h5>
        </div>
        <div class="col-md">
          <!-- <p name="question" value="<%= question %>"><%= question %></p> -->
          <input class="form-control" id="question" name="question" value="<%= question %>" readonly></input>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2 my-auto">
          <h5>Answer : </h5>
        </div>
        <div class="col-md">
          <input class="form-control" name="answer" rows="5" style="resize: none;" placeholder="Type your Answer...."></input>
        </div>
      </div>
      <div class="col-md">
        <div class="form-group row">
          <label for="replyto" class="col-sm-2 col-form-label" style="padding-left:0;">
            <h5>Reply To : </h5>
          </label>
          <div class="col-sm-10">
            <input type="text" name="email" readonly class="form-control-plaintext" id="replyto" value="<%= email %>">
          </div>
        </div>
      </div>

      <div class="col-md" style="text-align: right;">
        <button class="btn btn-danger btn-lg">Cancel</button>
        <button type="submit" class="btn btn-danger btn-lg">Send</button>
      </div>
    </div>


  </div>
</form>
</body>

</html>