<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>query form</title>


	<!-- Bootstrap core CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
		integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

	<style>
		.bd-placeholder-img {
			font-size: 1.125rem;
			text-anchor: middle;
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			user-select: none;
		}

		.scroll {
			max-height: 250px;
			overflow-y: scroll;
		}

		.col-md {
			margin-top: 1%;
		}

		#list {
			text-decoration: none;
		}

		@media (min-width: 768px) {
			.bd-placeholder-img-lg {
				font-size: 3.5rem;
			}
		}
	</style>
</head>




<body>
	<% var Health = [],Fees = [], Bus = [],Studies = [],General = []; %>

	<% for(var i=0;i< questions.length;i++){ %>
	<%if(questions[i].tags_list.toLowerCase().includes("health")){%>
	<% Health.push(questions[i].question_stmt+"@"+questions[i]._id) %>
	<% } %>
	<%if(questions[i].tags_list.toLowerCase().includes("studies")){%>
	<% Studies.push(questions[i].question_stmt+"@"+questions[i]._id) %>
	<% } %>
	<%if(questions[i].tags_list.toLowerCase().includes("fees")){%>
	<% Fees.push(questions[i].question_stmt+"@"+questions[i]._id) %>
	<% } %>


	<% } %>


	<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
		<h5 class="my-0 mr-md-auto font-weight-normal"><b>All Queries</b></h5>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md">
				<div class="card border-dark mb-3 h-100" style="">
					<div class="card-header h4">Health</div>
					<div class="card-body text-dark scroll">
						<ol>
							<% for(i=0;i< Health.length;i++){ %>
							<li><a href="/reply/<%=Health[i]%>"><%= Health[i].split("@")[0] %></a></li>
							<% } %>
						</ol>
					</div>
				</div>
			</div>
			<div class="col-md">
				<div class="card border-dark mb-3 h-100" style="">
					<div class="card-header h4">Fees</div>
					<div class="card-body text-dark scroll">
						<ol>
							<% for(i=0;i< Fees.length;i++){ %>
							<li><a href="/reply/<%=Fees[i]%>"><%= Fees[i].split('@')[0] %></a></li>
							<% } %>
						</ol>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md">
				<div class="card border-dark mb-3 h-100" style="">
					<div class="card-header h4">Studies</div>
					<div class="card-body text-dark scroll">
						<ol>
							<% for(i=0;i< Studies.length;i++){ %>
							<li><a href="/reply/<%=Studies[i]%>"><%= Studies[i].split('@')[0] %></a></li>
							<% } %>
						</ol>
					</div>
				</div>
			</div>
			<div class="col-md">
				<div class="card border-dark mb-3 h-100" style="">
					<div class="card-header h4">General</div>
					<div class="card-body text-dark scroll">
						<ol>
							<% for(i=0;i< General.length;i++){ %>
							<li><a href="/reply/<%=General[i]%>"><%= General[i].split('@')[0] %></a></li>
							<% } %>
						</ol>
					</div>
				</div>
			</div>
		</div>



		
	</div>

</body>

</html>